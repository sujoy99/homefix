{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "CommonJS",
    "target": "ES2020",
    "types": ["node"],

    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],

    "sourceMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@utils": ["utils/index.ts"],
      "@utils/*": ["utils/*"],
      "@logger/*": ["logger/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@errors/*": ["errors/*"],
      "@http/*": ["http/*"],
      "@modules/*": ["modules/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
}
